    "version": "0.2.0",
    "configurations": [
        {
            "name": "KernelDebug",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/build/kernel/kernel.sys",
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "gdbpath": "gdb"
        },
        {
            "name": "mk_floppy",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/mk_floppy",
            "args": [
                "${workspaceFolder}/build/tools/disk.img",
                "${workspaceFolder}/build/bootloader/stage2/stage2.bin",
                "${workspaceFolder}/build/kernel/kernel.sys",
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "ext4_file_tool",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/ext4_file_tool",
            "args": [
                "-f",
                "${workspaceFolder}/build/tools/disk.img",
                "-t",
                "ext4",
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
